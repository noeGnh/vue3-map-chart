{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/env.d.ts", "src/**/*", "src/**/*.vue", "src/types/**/*", "*.d.ts"],
  "exclude": ["src/**/__tests__/*", "types"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM"],
    "composite": true,
    "outDir": "dist",
    "declarationDir": "types",
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0"
  }
}
